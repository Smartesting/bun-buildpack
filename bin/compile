#!/bin/bash

steptxt="----->"

start() {
    echo -n "$steptxt $@... "
}

finished() {
    echo "done"
}

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}


start "Installing Bun"
  curl -fsSL https://bun.sh/install | bash
finished
export BUN_INSTALL="$HOME/.bun" 
export PATH="$BUN_INSTALL/bin:$PATH"

# Build the project
cd $BUILD_DIR

